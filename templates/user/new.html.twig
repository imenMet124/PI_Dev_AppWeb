{# templates/user/_form.html.twig #}

{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control' ~ (form.name.vars.errors|length ? ' is-invalid' : '')}}) }}
                {{ form_errors(form.name) }}
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control' ~ (form.email.vars.errors|length ? ' is-invalid' : '')}}) }}
                {{ form_errors(form.email) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.phone) }}
                {{ form_widget(form.phone, {'attr': {'class': 'form-control' ~ (form.phone.vars.errors|length ? ' is-invalid' : '')}}) }}
                {{ form_errors(form.phone) }}
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.role) }}
                {{ form_widget(form.role, {'attr': {'class': 'form-control' ~ (form.role.vars.errors|length ? ' is-invalid' : '')}}) }}
                {{ form_errors(form.role) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.password) }}
                {{ form_widget(form.password, {
                    'attr': {
                        'class': 'form-control' ~ (form.password.vars.errors|length ? ' is-invalid' : ''),
                        'autocomplete': 'new-password'
                    }
                }) }}
                {{ form_errors(form.password) }}
                <small class="form-text text-muted">
                    Password must be at least 6 characters long
                </small>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.position) }}
                {{ form_widget(form.position, {'attr': {'class': 'form-control' ~ (form.position.vars.errors|length ? ' is-invalid' : '')}}) }}
                {{ form_errors(form.position) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.salary) }}
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    {{ form_widget(form.salary, {'attr': {'class': 'form-control' ~ (form.salary.vars.errors|length ? ' is-invalid' : '')}}) }}
                </div>
                {{ form_errors(form.salary) }}
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.hireDate) }}
                {{ form_widget(form.hireDate, {'attr': {'class': 'form-control' ~ (form.hireDate.vars.errors|length ? ' is-invalid' : '')}}) }}
                {{ form_errors(form.hireDate) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.status) }}
                {{ form_widget(form.status, {'attr': {'class': 'form-control' ~ (form.status.vars.errors|length ? ' is-invalid' : '')}}) }}
                {{ form_errors(form.status) }}
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.department) }}
                {{ form_widget(form.department, {'attr': {'class': 'form-control' ~ (form.department.vars.errors|length ? ' is-invalid' : '')}}) }}
                {{ form_errors(form.department) }}
            </div>
        </div>
    </div>

    <div class="form-group text-right">
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save"></i> {{ button_label|default('Save') }}
        </button>
    </div>
{{ form_end(form) }}

<style>
    .is-invalid {
        border-color: #dc3545;
    }
    .invalid-feedback {
        display: block;
        color: #dc3545;
        margin-top: 0.25rem;
    }
</style>