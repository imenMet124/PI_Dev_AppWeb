<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            {{ form_start(form, {
                'attr': {
                    'class': 'form-horizontal',
                    'enctype': 'multipart/form-data',
                    'novalidate': 'novalidate'
                }
            }) }}
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.name, 'Name', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.name) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.email) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.phone, 'Phone', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.phone) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.role, 'Role', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.role) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.password, 'Password', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.password) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.position, 'Position', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.position, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.position) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.salary, 'Salary', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.salary, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.salary) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.hireDate, 'Hire Date', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.hireDate, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.hireDate) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.status, 'Status', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.status) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.department, 'Department', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.department, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.department) }}
                    </div>
                </div>
            </div>
            <div class="form-group text-center mt-4">
                <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
