{% extends 'Back_Base.html.twig' %}

{% block title %}User Management{% endblock %}

{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">User Management</h4>
                            <a href="{{ path('app_user_new') }}" class="btn btn-primary float-right">
                                <i class="fa fa-plus"></i> Create New User
                            </a>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Phone</th>
                                            <th>Role</th>
                                            <th>Position</th>
                                            <th>Salary</th>
                                            <th>HireDate</th>
                                            <th>Status</th>
                                            <th>Department</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for user in users %}
                                        <tr>
                                            <td>{{ user.id }}</td>
                                            <td>{{ user.name }}</td>
                                            <td>{{ user.email }}</td>
                                            <td>{{ user.phone }}</td>
                                            <td>{{ user.role }}</td>
                                            <td>{{ user.position }}</td>
                                            <td>{{ user.salary }}</td>
                                            <td>{{ user.hireDate ? user.hireDate|date('Y-m-d') : '' }}</td>
                                            <td>
                                                <span class="badge badge-{{ user.status == 'ACTIVE' ? 'success' : (user.status == 'INACTIVE' ? 'danger' : 'warning') }}">
                                                    {{ user.status.getLabel() }}
                                                </span>
                                            </td>
                                            <td>{{ user.department ? user.department.name : 'No department' }}</td>
                                            <td>
                                                <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-info btn-sm">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary btn-sm">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="11" class="text-center">No users found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
