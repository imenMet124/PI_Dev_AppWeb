{% extends 'Back_Base.html.twig' %}

{% block title %}Task List{% endblock %}

{% block body %}
{% if ajax is defined and ajax %}
    <div id="tasks-table-container">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Title</th>
                    <th>Status</th>
                    <th>Priority</th>
                    <th>Progress</th>
                    <th>Deadline</th>
                    <th>Assignees</th>
                    <th class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for tache in tasks %}
                <tr>
                    <td class="ps-4">
                        <div class="d-flex align-items-center">
                            <div class="icon-circle bg-light-primary me-3">
                                <i class="fas fa-clipboard-list text-primary"></i>
                            </div>
                            <div>
                                <h6 class="mb-0">{{ tache.titreTache }}</h6>
                                <small class="text-muted">{{ tache.descTache|slice(0, 50) }}{% if tache.descTache|length > 50 %}...{% endif %}</small>
                            </div>
                        </div>
                    </td>
                    <td>
                        <span class="badge bg-{{ tache.statutTache == 'Completed' ? 'success' : 'primary' }} rounded-pill">
                            {{ tache.statutTache }}
                        </span>
                    </td>
                    <td>
                        <span class="badge bg-{{ tache.priorite == 'High' ? 'danger' : (tache.priorite == 'Medium' ? 'warning' : 'info') }} rounded-pill">
                            {{ tache.priorite }}
                        </span>
                    </td>
                    <td style="width: 150px;">
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar bg-{{ tache.statutTache == 'Completed' ? 'success' : 'primary' }}" 
                                 role="progressbar" 
                                 style="width: {{ tache.progression ?? 0 }}%" 
                                 aria-valuenow="{{ tache.progression ?? 0 }}" 
                                 aria-valuemin="0" 
                                 aria-valuemax="100">
                            </div>
                        </div>
                        <small class="text-muted">{{ tache.progression ?? 0 }}%</small>
                    </td>
                    <td>
                        {% if tache.deadline %}
                            <div class="d-flex align-items-center">
                                <i class="far fa-calendar-alt text-muted me-2"></i>
                                <span>{{ tache.deadline|date('Y-m-d') }}</span>
                            </div>
                        {% else %}
                            <span class="text-muted">Not set</span>
                        {% endif %}
                    </td>
                    <td>
                        <div class="avatar-group">
                            {% for affectation in tache.affectations|slice(0, 3) %}
                                <div class="avatar avatar-sm bg-primary text-white rounded-circle">
                                    {{ affectation.employe.email|slice(0,1)|upper }}
                                </div>
                            {% endfor %}
                            {% if tache.affectations|length > 3 %}
                                <div class="avatar avatar-sm bg-secondary text-white rounded-circle">
                                    +{{ tache.affectations|length - 3 }}
                                </div>
                            {% endif %}
                        </div>
                    </td>
                    <td class="text-end pe-4">
                        <div class="btn-group">
                            <a href="{{ path('app_task_show', {'id_tache': tache.idTache}) }}" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ path('app_task_edit', {'id_tache': tache.idTache}) }}" class="btn btn-sm btn-outline-warning">
                                <i class="fas fa-edit"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="mt-3 d-flex justify-content-center">
            {{ knp_pagination_render(tasks) }}
        </div>
    </div>
