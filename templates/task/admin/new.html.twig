{% extends 'Back_Base.html.twig' %}

{% block title %}New Task{% endblock %}

{% block body %}
<div class="wrapper">
    <div class="main-panel">
        <div class="content">
            <div class="page-inner">
                <div class="page-header">
                    <h4 class="page-title">Create New Task</h4>
                    <div class="btn-group btn-group-page-header ml-auto">
                        <a href="{{ path('app_task_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                {{ form_label(form.titreTache, 'Title', {'label_attr': {'class': 'form-label'}}) }}
                                                {{ form_widget(form.titreTache, {'attr': {'class': 'form-control'}}) }}
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                {{ form_label(form.deadline, 'Deadline', {'label_attr': {'class': 'form-label'}}) }}
                                                {{ form_widget(form.deadline, {'attr': {'class': 'form-control datepicker'}}) }}
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                {{ form_label(form.descTache, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                                {{ form_widget(form.descTache, {
                                                    'attr': {
                                                        'class': 'form-control',
                                                        'rows': 4
                                                    }
                                                }) }}
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                {{ form_label(form.statutTache, 'Status', {'label_attr': {'class': 'form-label'}}) }}
                                                {{ form_widget(form.statutTache, {'attr': {'class': 'form-select'}}) }}
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                {{ form_label(form.priorite, 'Priority', {'label_attr': {'class': 'form-label'}}) }}
                                                {{ form_widget(form.priorite, {'attr': {'class': 'form-select'}}) }}
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                {{ form_label(form.progression, 'Progress', {'label_attr': {'class': 'form-label'}}) }}
                                                {{ form_widget(form.progression, {
                                                    'attr': {
                                                        'class': 'form-control',
                                                        'min': '0',
                                                        'max': '100',
                                                        'type': 'number'
                                                    }
                                                }) }}
                                            </div>
                                        </div>
                                    </div>

                                    {% if form.users is defined %}
                                    <div class="row mb-3">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                {{ form_label(form.users, 'Assign To', {'label_attr': {'class': 'form-label'}}) }}
                                                {{ form_widget(form.users, {'attr': {'class': 'form-select'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                    {% endif %}

                                    <div class="row mt-4">
                                        <div class="col-12">
                                            <div class="d-flex justify-content-end">
                                                <button type="submit" class="btn btn-primary">
                                                    <i class="fas fa-save me-2"></i>Create Task
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 