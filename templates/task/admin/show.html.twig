{% extends 'Back_Base.html.twig' %}

{% block title %}Task Details{% endblock %}

{% block body %}
<div class="wrapper">
    <div class="main-panel">
        <div class="content">
            <div class="page-inner">
                <div class="container-fluid py-4">
                    <!-- Header Section -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h1 class="h3 mb-1 text-gray-800"><i class="fas fa-tasks me-2"></i>{{ tache.titreTache }}</h1>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="{{ path('app_task_index') }}">Tasks</a></li>
                                    <li class="breadcrumb-item active">Task Details</li>
                                </ol>
                            </nav>
                        </div>
                        <div class="btn-group shadow-sm">
                            <a href="{{ path('app_task_edit', {'id_tache': tache.idTache}) }}" class="btn btn-primary">
                                <i class="fas fa-edit me-2"></i>Edit Task
                            </a>
                            <a href="{{ path('app_task_index') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Main Task Info -->
                        <div class="col-lg-8">
                            <div class="card shadow-sm border-0 mb-4">
                                <div class="card-body">
                                    <div class="mb-4">
                                        <h5 class="text-uppercase text-muted mb-2 font-weight-bold small">Description</h5>
                                        <p class="card-text p-3 bg-light rounded">{{ tache.descTache }}</p>
                                    </div>

                                    <div class="row g-4">
                                        <div class="col-md-6">
                                            <div class="mb-4">
                                                <h5 class="text-uppercase text-muted mb-2 font-weight-bold small">Status & Priority</h5>
                                                <div class="d-flex gap-3">
                                                    <span class="badge bg-{{ tache.statutTache == 'Completed' ? 'success' : 'primary' }} rounded-pill px-3 py-2">
                                                        <i class="fas fa-check-circle me-1"></i>
                                                        {{ tache.statutTache ?? 'Not Started' }}
                                                    </span>
                                                    <span class="badge bg-{{ tache.priorite == 'High' ? 'danger' : (tache.priorite == 'Medium' ? 'warning' : 'info') }} rounded-pill px-3 py-2">
                                                        <i class="fas fa-flag me-1"></i>
                                                        {{ tache.priorite ?? 'No Priority' }}
                                                    </span>
                                                </div>
                                            </div>

                                            <div class="mb-4">
                                                <h5 class="text-uppercase text-muted mb-2 font-weight-bold small">Progress</h5>
                                                <div class="progress" style="height: 10px;">
                                                    <div class="progress-bar bg-{{ tache.statutTache == 'Completed' ? 'success' : 'primary' }}" 
                                                         role="progressbar" 
                                                         style="width: {{ tache.progression ?? 0 }}%" 
                                                         aria-valuenow="{{ tache.progression ?? 0 }}" 
                                                         aria-valuemin="0" 
                                                         aria-valuemax="100">
                                                    </div>
                                                </div>
                                                <span class="text-muted mt-2 d-block">{{ tache.progression ?? 0 }}% Complete</span>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="mb-4">
                                                <h5 class="text-uppercase text-muted mb-2 font-weight-bold small">Deadline</h5>
                                                <div class="d-flex align-items-center">
                                                    <i class="far fa-calendar-alt text-primary me-2"></i>
                                                    <span class="h5 mb-0">{{ tache.deadline ? tache.deadline|date('Y-m-d') : 'Not set' }}</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Sidebar Info -->
                        <div class="col-lg-4">
                            <!-- Assigned Users Card -->
                            <div class="card shadow-sm border-0 mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-users me-2"></i>Assigned Team Members
                                    </h5>
                                </div>
                                <div class="card-body">
                                    {% if tache.affectations is empty %}
                                        <div class="text-center text-muted py-4">
                                            <i class="fas fa-user-plus fa-2x mb-3"></i>
                                            <p class="mb-0">No team members assigned</p>
                                        </div>
                                    {% else %}
                                        <ul class="list-group list-group-flush">
                                        {% for affectation in tache.affectations %}
                                            <li class="list-group-item d-flex align-items-center px-0">
                                                <div class="avatar avatar-sm bg-primary text-white rounded-circle me-3">
                                                    {{ affectation.employe.email|slice(0,1)|upper }}
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-0">{{ affectation.employe.email }}</h6>
                                                </div>
                                            </li>
                                        {% endfor %}
                                        </ul>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.avatar {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
}

.card {
    transition: transform 0.2s ease-in-out;
}

.card:hover {
    transform: translateY(-3px);
}

.progress {
    border-radius: 10px;
    background-color: #edf2f9;
}

.badge {
    font-weight: 500;
}

.breadcrumb {
    background: transparent;
    padding: 0;
    margin: 0;
}

.breadcrumb-item + .breadcrumb-item::before {
    content: "â€º";
}

.btn-group .btn {
    padding: 0.5rem 1rem;
}

.text-uppercase.text-muted {
    font-size: 0.75rem;
    letter-spacing: 0.5px;
}
</style>
{% endblock %}