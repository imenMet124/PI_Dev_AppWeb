{% extends 'base.html.twig' %}

{% block title %}Task Details{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h1 class="h3 mb-0"><i class="fas fa-tasks me-2"></i>Task Details</h1>
                            <div class="btn-group">
                                <a href="{{ path('app_task_edit', {'id_tache': tache.idTache}) }}" class="btn btn-primary">
                                    <i class="fas fa-edit me-2"></i>Edit
                                </a>
                                <form method="post" action="{{ path('app_task_delete', {'id_tache': tache.idTache}) }}" onsubmit="return confirm('Are you sure you want to delete this task?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tache.idTache) }}">
                                    <button class="btn btn-danger">
                                        <i class="fas fa-trash me-2"></i>Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h5 class="text-muted">Task Title</h5>
                                <p>{{ tache.titreTache }}</p>
                            </div>
                            <div class="col-md-6">
                                <h5 class="text-muted">Status</h5>
                                <span class="badge bg-{{ tache.statutTache == 'Completed' ? 'success' : 'primary' }}">
                                    {{ tache.statutTache ?? 'Not Started' }}
                                </span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h5 class="text-muted">Priority</h5>
                                <span class="badge bg-info">
                                    {{ tache.priorite ?? 'No Priority' }}
                                </span>
                            </div>
                            <div class="col-md-6">
                                <h5 class="text-muted">Progress</h5>
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" style="width: {{ tache.progression ?? 0 }}%">
                                        {{ tache.progression ?? 0 }}%
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h5 class="text-muted">Deadline</h5>
                                <p>{{ tache.deadline ? tache.deadline|date('Y-m-d') : 'Not set' }}</p>
                            </div>
                            <div class="col-md-6">
                                <h5 class="text-muted">Project</h5>
                                <p>{{ tache.projet.nomProjet }}</p>
                            </div>
                        </div>

                        <div class="mb-3">
                            <h5 class="text-muted">Description</h5>
                            <p>{{ tache.descTache ?? 'No description provided' }}</p>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_task_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to list
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 