<!DOCTYPE html>

<title>Application</title>

{% block body %}
    <h1>Application</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ application.id }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ application.status }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ application.message }}</td>
            </tr>
            <tr>
                <th>SubmittedAt</th>
                <td>{{ application.submittedAt ? application.submittedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CvSnapshotPath</th>
                <td>{{ application.cvSnapshotPath }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_application_index') }}">back to list</a>

    <a href="{{ path('app_application_edit', {'id': application.id}) }}">edit</a>

    {{ include('application/_delete_form.html.twig') }}
{% endblock %}
