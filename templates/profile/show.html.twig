{% extends "Front_Base.html.twig" %}

{% block title %}My Profile - EasyHR{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .page-header {
            background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://images.unsplash.com/photo-1521791136064-7986c2920216?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2069&q=80');
            background-position: center center;
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Page Header Start -->
    <div class="container-fluid page-header mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container">
            <h1 class="display-3 mb-4 animated slideInDown">My Profile</h1>
            <nav aria-label="breadcrumb animated slideInDown">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Profile</li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- Page Header End -->

    <!-- Profile Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-5">
                <!-- Profile Card -->
                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm wow fadeInUp" data-wow-delay="0.1s">
                        <div class="card-body text-center p-5">
                            {% if user.photo %}
                                <img src="{{ asset('uploads/photos/' ~ user.photo.photoPath) }}" alt="Profile Photo" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                            {% else %}
                                <div class="rounded-circle bg-primary d-inline-flex align-items-center justify-content-center mb-3" style="width: 150px; height: 150px;">
                                    <span class="text-white display-4">{{ user.name|first|upper }}</span>
                                </div>
                            {% endif %}
                            <h4 class="mb-2">{{ user.name }}</h4>
                            <p class="text-muted mb-3">{{ user.position }}</p>
                            <div class="d-flex justify-content-center mb-3">
                                <a href="mailto:{{ user.email }}" class="btn btn-square btn-primary mx-1">
                                    <i class="fas fa-envelope"></i>
                                </a>
                                {% if user.phone %}
                                    <a href="tel:{{ user.phone }}" class="btn btn-square btn-primary mx-1">
                                        <i class="fas fa-phone"></i>
                                    </a>
                                {% endif %}
                            </div>
                            <div class="d-grid gap-2">
                                <a href="{{ path('app_profile_edit') }}" class="btn btn-primary">
                                    <i class="fas fa-edit me-2"></i> Edit Profile
                                </a>
                                <a href="{{ path('app_logout') }}" class="btn btn-danger">
                                    <i class="fas fa-sign-out-alt me-2"></i> Logout
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Profile Information -->
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm wow fadeInUp" data-wow-delay="0.3s">
                        <div class="card-body p-5">
                            <h4 class="card-title mb-4">Profile Information</h4>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Email Address</label>
                                        <p class="form-control bg-light">{{ user.email }}</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Phone Number</label>
                                        <p class="form-control bg-light">{{ user.phone ?: 'Not provided' }}</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Position</label>
                                        <p class="form-control bg-light">{{ user.position }}</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Department</label>
                                        <p class="form-control bg-light">{{ user.department ? user.department.name : 'No department' }}</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Hire Date</label>
                                        <p class="form-control bg-light">{{ user.hireDate ? user.hireDate|date('F d, Y') : 'Not set' }}</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Status</label>
                                        <p class="form-control bg-light">
                                            <span class="badge bg-{{ user.status == 'ACTIVE' ? 'success' : (user.status == 'INACTIVE' ? 'danger' : 'warning') }}">
                                                {{ user.status.getLabel() }}
                                            </span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                                                    </div>
                    </div>

                    <!-- Admin Section -->
                    {% if user.role in ['RESPONSABLE_RH', 'CHEF_PROJET'] %}
                    <div class="card border-0 shadow-sm wow fadeInUp mt-4" data-wow-delay="0.5s">
                        <div class="card-body p-5">
                            <h4 class="card-title mb-4">Management Dashboard</h4>
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <div class="border rounded p-4 text-center">
                                        <i class="fas fa-users fa-3x text-primary mb-3"></i>
                                        <h5 class="mb-3">User Management</h5>
                                        <p class="mb-3">Manage all users, their roles, and permissions</p>
                                        <a href="{{ path('app_user_index') }}" class="btn btn-primary">
                                            <i class="fas fa-arrow-right me-2"></i>Go to Users
                                        </a>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="border rounded p-4 text-center">
                                        <i class="fas fa-building fa-3x text-primary mb-3"></i>
                                        <h5 class="mb-3">Department Management</h5>
                                        <p class="mb-3">Manage departments and their configurations</p>
                                        <a href="{{ path('app_department_index') }}" class="btn btn-primary">
                                            <i class="fas fa-arrow-right me-2"></i>Go to Departments
                                        </a>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="border rounded p-4 text-center">
                                        <i class="fas fa-chart-line fa-3x text-primary mb-3"></i>
                                        <h5 class="mb-3">Analytics Dashboard</h5>
                                        <p class="mb-3">View system statistics and reports</p>
                                        <a href="{{ path('app_back') }}" class="btn btn-primary">
                                            <i class="fas fa-arrow-right me-2"></i>Go to Dashboard
                                        </a>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="border rounded p-4 text-center">
                                        <i class="fas fa-cog fa-3x text-primary mb-3"></i>
                                        <h5 class="mb-3">System Settings</h5>
                                        <p class="mb-3">Configure system-wide settings and preferences</p>
                                        <a href="#" class="btn btn-primary">
                                            <i class="fas fa-arrow-right me-2"></i>Go to Settings
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                    {% if app.user and app.user.role == 'RESPONSABLE_RH' %}
                        <a href="{{ path('app_back') }}" class="btn btn-warning mt-3">
                            <i class="fas fa-tools me-2"></i> Go to Admin Side
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <!-- Profile End -->
{% endblock %}