{% extends 'Front_Base.html.twig' %}

{% block title %}My Todoist Tasks{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="mb-4">My Todoist Tasks</h2>
    <a href="{{ path('todoist_oauth') }}" class="btn btn-outline-primary mb-3">Connect/Refresh Todoist</a>
    <div class="card">
        <div class="card-body">
            {% if tasks is empty %}
                <div class="alert alert-info">No tasks found in your Todoist account.</div>
            {% else %}
                <ul class="list-group">
                    {% for task in tasks %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            {{ task.content }}
                            {% if task.due and task.due.date %}
                                <span class="badge bg-info">Due: {{ task.due.date }}</span>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
