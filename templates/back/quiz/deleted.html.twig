{% extends 'Back_Base.html.twig' %}

{% block title %}Quiz supprimés{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3 mb-2 fw-bold">Quiz supprimés</h1>
            <p class="text-muted">Gérez les quiz qui ont été supprimés.</p>
        </div>
        <div class="col-auto d-flex align-items-center">
            <a href="{{ path('app_quiz_index') }}" class="btn btn-outline-primary me-2">
                <i class="fas fa-arrow-left me-1"></i> Retour aux quiz
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">Liste des quiz supprimés</h5>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">ID</th>
                            <th>Titre</th>
                            <th>Formation</th>
                            <th>Questions</th>
                            <th>Date de suppression</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% if quizzes|length > 0 %}
                        {% for quiz in quizzes %}
                            <tr>
                                <td class="ps-4">{{ quiz.id }}</td>
                                <td>{{ quiz.title }}</td>
                                <td>
                                    {% if quiz.formation %}
                                        {{ quiz.formation.titre }}
                                    {% else %}
                                        <span class="badge bg-secondary">Aucune</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge bg-info rounded-pill">{{ quiz.questions|length }}</span>
                                </td>
                                <td>{{ quiz.deletedAt ? quiz.deletedAt|date('d/m/Y H:i') : '' }}</td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <form method="post" action="{{ path('app_quiz_restore', {'id': quiz.id}) }}">
                                            <input type="hidden" name="_token" value="{{ csrf_token('restore' ~ quiz.id) }}">
                                            <button class="btn btn-sm btn-success" type="submit" data-bs-toggle="tooltip" title="Restaurer">
                                                <i class="fas fa-trash-restore"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <div class="d-flex flex-column align-items-center">
                                    <i class="fas fa-trash-alt fa-3x text-muted mb-3"></i>
                                    <h5 class="fw-bold">Aucun quiz supprimé</h5>
                                    <p class="text-muted mb-0">Il n'y a pas de quiz dans la corbeille.</p>
                                </div>
                            </td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
