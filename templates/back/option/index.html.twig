{% extends 'Back_Base.html.twig' %}

{% block body %}
<!-- Page Header -->
<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h2 class="fw-bold mb-2">
            {% if question is defined %}
                Options de la Question
            {% else %}
                Gestion des Options
            {% endif %}
        </h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_back') }}">Accueil</a></li>
                {% if question is defined %}
                    <li class="breadcrumb-item"><a href="{{ path('app_question_index') }}">Questions</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_question_show', {'id': question.id}) }}">Question #{{ question.id }}</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Options</li>
                {% else %}
                    <li class="breadcrumb-item active" aria-current="page">Options</li>
                {% endif %}
            </ol>
        </nav>
        {% if question is defined %}
            <p class="text-muted">
                <i class="fas fa-info-circle me-1"></i>
                Question: "{{ question.text|length > 50 ? question.text|slice(0, 50) ~ '...' : question.text }}"
            </p>
        {% endif %}
    </div>
    <div>
        {% if question is defined %}
            <a href="{{ path('app_question_show', {'id': question.id}) }}" class="btn btn-outline-secondary me-2">
                <i class="fas fa-arrow-left me-1"></i> Retour
            </a>
            <a href="{{ path('app_option_new_for_question', {'question_id': question.id}) }}" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Ajouter une Option
            </a>
        {% else %}
            <a href="{{ path('app_option_new') }}" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Ajouter une Option
            </a>
        {% endif %}
    </div>
</div>

<!-- Search and Filter Card -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body p-4">
        <div class="row g-3">
            <div class="col-md-8">
                <div class="input-group">
                    <span class="input-group-text bg-light border-0">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    <input type="text" id="searchInput" class="form-control border-0 bg-light" placeholder="Rechercher une option...">
                </div>
            </div>
            <div class="col-md-4">
                <select class="form-select border-0 bg-light" id="filterCorrect">
                    <option value="">Toutes les options</option>
                    <option value="correct">Options correctes</option>
                    <option value="incorrect">Options incorrectes</option>
                </select>
            </div>
        </div>
    </div>
</div>

<!-- Options List Card -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-transparent border-0 pt-4 pb-2">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-0 fw-bold">Liste des Options</h5>
                <p class="text-muted mb-0">{{ options|length }} option(s) trouvée(s)</p>
            </div>
            <div class="dropdown">
                <button class="btn btn-sm btn-light" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-ellipsis-v"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                    <li><a class="dropdown-item" href="#"><i class="fas fa-download me-2"></i>Exporter</a></li>
                    <li><a class="dropdown-item" href="#"><i class="fas fa-print me-2"></i>Imprimer</a></li>
                    <li><a class="dropdown-item" href="#" onclick="showNotification('Liste actualisée', 'info')"><i class="fas fa-sync-alt me-2"></i>Actualiser</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover datatable mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="border-0 ps-4">ID</th>
                        <th class="border-0">Texte</th>
                        <th class="border-0">Correcte</th>
                        <th class="border-0">Question</th>
                        <th class="border-0 text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for option in options %}
                        <tr>
                            <td class="ps-4">{{ option.id }}</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-warning bg-opacity-10 rounded-circle p-2 me-3">
                                        <i class="fas fa-check-circle text-warning"></i>
                                    </div>
                                    <span>{{ option.text }}</span>
                                </div>
                            </td>
                            <td>
                                {% if option.isCorrect %}
                                    <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">
                                        <i class="fas fa-check-circle me-1"></i> Oui
                                    </span>
                                {% else %}
                                    <span class="badge bg-danger bg-opacity-10 text-danger px-3 py-2 rounded-pill">
                                        <i class="fas fa-times-circle me-1"></i> Non
                                    </span>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('app_question_show', {'id': option.question.id}) }}" class="text-decoration-none">
                                    <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">
                                        <i class="fas fa-list-ol me-1"></i> {{ option.question.text|length > 30 ? option.question.text|slice(0, 30) ~ '...' : option.question.text }}
                                    </span>
                                </a>
                            </td>
                            <td class="text-end pe-4">
                                <a href="{{ path('app_option_show', {'id': option.id}) }}" class="btn btn-sm btn-outline-info me-1" data-toggle="tooltip" title="Voir détails">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_option_edit', {'id': option.id}) }}" class="btn btn-sm btn-outline-warning me-1" data-toggle="tooltip" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" action="{{ path('app_option_delete', {'id': option.id}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette option?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ option.id) }}">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Supprimer">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <div class="d-flex flex-column align-items-center">
                                    <i class="fas fa-folder-open text-muted mb-3" style="font-size: 3rem;"></i>
                                    <h5 class="mb-2">Aucune option trouvée</h5>
                                    <p class="text-muted mb-3">Commencez par ajouter une nouvelle option</p>
                                    {% if question is defined %}
                                        <a href="{{ path('app_option_new_for_question', {'question_id': question.id}) }}" class="btn btn-sm btn-primary">
                                            <i class="fas fa-plus me-2"></i> Ajouter une Option
                                        </a>
                                    {% else %}
                                        <a href="{{ path('app_option_new') }}" class="btn btn-sm btn-primary">
                                            <i class="fas fa-plus me-2"></i> Ajouter une Option
                                        </a>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    // Initialize delete buttons when the page loads
    // The global initDeleteButtons function will handle this

    // Initialize search functionality
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const filterCorrect = document.getElementById('filterCorrect');
        const table = document.querySelector('.datatable');

        if (searchInput && table) {
            searchInput.addEventListener('keyup', function() {
                const searchText = this.value.toLowerCase();
                const rows = table.querySelectorAll('tbody tr');

                rows.forEach(row => {
                    const text = row.querySelector('td:nth-child(2)').textContent.toLowerCase();

                    if (text.includes(searchText)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        }

        // Filter by correct/incorrect
        if (filterCorrect && table) {
            filterCorrect.addEventListener('change', function() {
                const filterValue = this.value;
                const rows = table.querySelectorAll('tbody tr');

                rows.forEach(row => {
                    const correctCell = row.querySelector('td:nth-child(3)');
                    const isCorrect = correctCell.textContent.includes('Oui');

                    if (filterValue === '' ||
                        (filterValue === 'correct' && isCorrect) ||
                        (filterValue === 'incorrect' && !isCorrect)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        }

        // Initialize tooltips
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>

{% include 'back/includes/custom_scripts.html.twig' %}
{% endblock %}
