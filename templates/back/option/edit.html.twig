{% extends 'Back_Base.html.twig' %}

{% block body %}
<div class="wrapper">
    <div class="main-panel">
        <div class="main-header">
            <!-- Navbar Header -->
            <nav class="navbar navbar-header navbar-header-transparent navbar-expand-lg border-bottom">
                <div class="container-fluid">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_back') }}">
                                    <i class="fas fa-home"></i> Dashboard
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar Header -->
        </div>

        <div class="container">
            <div class="page-inner">
                <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
                    <div>
                        <h3 class="fw-bold mb-3">Modifier l'Option</h3>
                    </div>
                    <div class="ms-md-auto py-2 py-md-0">
                        {% if option.question %}
                            <a href="{{ path('app_option_by_question', {'question_id': option.question.id}) }}" class="btn btn-secondary btn-round">
                                <i class="fas fa-arrow-left"></i> Retour aux options
                            </a>
                        {% else %}
                            <a href="{{ path('app_option_index') }}" class="btn btn-secondary btn-round">
                                <i class="fas fa-arrow-left"></i> Retour à la liste
                            </a>
                        {% endif %}
                    </div>
                </div>

                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Modifier l'option</h4>
                            </div>
                            <div class="card-body">
                                {{ form_start(form) }}
                                <div class="form-group">
                                    {{ form_label(form.text) }}
                                    {{ form_widget(form.text) }}
                                    <div class="text-danger">
                                        {{ form_errors(form.text) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-check">
                                        {{ form_widget(form.is_correct) }}
                                        {{ form_label(form.is_correct) }}
                                    </div>
                                    <div class="text-danger">
                                        {{ form_errors(form.is_correct) }}
                                    </div>
                                </div>

                                {% if option.question %}
                                <div class="form-group">
                                    <label class="form-label">Question</label>
                                    <input type="text" class="form-control" value="{{ option.question.text|length > 50 ? option.question.text|slice(0, 50) ~ '...' : option.question.text }}" disabled>
                                    <small class="text-muted">Cette option est associée à la question ci-dessus</small>
                                </div>
                                {% endif %}

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
