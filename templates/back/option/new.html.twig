{% extends 'Back_Base.html.twig' %}

{% block body %}
<!-- Page Header -->
<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h2 class="fw-bold mb-2">
            {% if question is defined %}
                Nouvelle Option pour "{{ question.text|length > 30 ? question.text|slice(0, 30) ~ '...' : question.text }}"
            {% else %}
                Nouvelle Option
            {% endif %}
        </h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_back') }}">Accueil</a></li>
                {% if question is defined %}
                    <li class="breadcrumb-item"><a href="{{ path('app_question_index') }}">Questions</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_question_show', {'id': question.id}) }}">{{ question.text|length > 20 ? question.text|slice(0, 20) ~ '...' : question.text }}</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Nouvelle Option</li>
                {% else %}
                    <li class="breadcrumb-item"><a href="{{ path('app_option_index') }}">Options</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Nouvelle</li>
                {% endif %}
            </ol>
        </nav>
    </div>
    <div>
        {% if question is defined %}
            <a href="{{ path('app_option_by_question', {'question_id': question.id}) }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i> Retour aux options
            </a>
        {% else %}
            <a href="{{ path('app_option_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i> Retour à la liste
            </a>
        {% endif %}
    </div>
</div>

<!-- Option Form Card -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-transparent border-0 pt-4 pb-2">
        <h5 class="mb-0 fw-bold">Créer une nouvelle option</h5>
    </div>
    <div class="card-body p-4">
        {{ form_start(form, {'attr': {'class': 'option-form'}}) }}
        <div class="form-group">
            {{ form_label(form.text) }}
            {{ form_widget(form.text, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">
                {{ form_errors(form.text) }}
            </div>
        </div>

        <div class="form-group mt-3">
            <div class="form-check">
                {{ form_widget(form.is_correct, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(form.is_correct, null, {'label_attr': {'class': 'form-check-label'}}) }}
            </div>
            <div class="text-danger">
                {{ form_errors(form.is_correct) }}
            </div>
        </div>

        {% if question is not defined and form.question is defined %}
        <div class="form-group mt-3">
            {{ form_label(form.question) }}
            {{ form_widget(form.question, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">
                {{ form_errors(form.question) }}
            </div>
        </div>
        {% endif %}

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i> Enregistrer
            </button>
            {% if question is defined %}
                <a href="{{ path('app_option_by_question', {'question_id': question.id}) }}" class="btn btn-outline-secondary ms-2">
                    <i class="fas fa-times me-2"></i> Annuler
                </a>
            {% else %}
                <a href="{{ path('app_option_index') }}" class="btn btn-outline-secondary ms-2">
                    <i class="fas fa-times me-2"></i> Annuler
                </a>
            {% endif %}
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
