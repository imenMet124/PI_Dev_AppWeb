{% extends 'Back_Base.html.twig' %}

{% block body %}
<!-- Page Header -->
<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h2 class="fw-bold mb-2">Modifier la Formation</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_back') }}">Accueil</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_formation_index') }}">Formations</a></li>
                <li class="breadcrumb-item active" aria-current="page">Modifier</li>
            </ol>
        </nav>
    </div>
    <div>
        <a href="{{ path('app_formation_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i> Retour à la liste
        </a>
    </div>
</div>

<!-- Formation Form Card -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-transparent border-0 pt-4 pb-2">
        <h5 class="mb-0 fw-bold">Modifier la formation</h5>
    </div>
    <div class="card-body p-4">
        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data', 'class': 'formation-form'}}) }}
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.titre) }}
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">
                        {{ form_errors(form.titre) }}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.quiz) }}
                    {{ form_widget(form.quiz, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">
                        {{ form_errors(form.quiz) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
            <div class="text-danger">
                {{ form_errors(form.description) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.pdfFile) }}
            {{ form_widget(form.pdfFile, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">
                {{ form_errors(form.pdfFile) }}
            </div>
            <small class="form-text text-muted">Formats acceptés: PDF. Taille maximale: 5 Mo.</small>
            {% if formation.filePath %}
                <div class="mt-2">
                    <p class="mb-0">
                        <span class="fw-medium">Fichier actuel:</span>
                        <a href="{{ asset(formation.filePath) }}" target="_blank" class="text-primary">
                            <i class="fas fa-file-pdf me-1"></i>{{ formation.filePath|split('/')|last }}
                        </a>
                    </p>
                </div>
            {% endif %}
        </div>
        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i> Enregistrer
            </button>
            <a href="{{ path('app_formation_index') }}" class="btn btn-outline-secondary ms-2">
                <i class="fas fa-times me-2"></i> Annuler
            </a>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
