{% extends 'Back_Base.html.twig' %}

{% block body %}
<!-- Page Header -->
<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h2 class="fw-bold mb-2">Gestion des Formations</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_back') }}">Accueil</a></li>
                <li class="breadcrumb-item active" aria-current="page">Formations</li>
            </ol>
        </nav>
    </div>
    <div>
        <a href="{{ path('app_formation_new') }}" class="btn btn-primary me-2">
            <i class="fas fa-plus me-2"></i> Ajouter une Formation
        </a>
        <a href="{{ path('app_formation_deleted') }}" class="btn btn-outline-secondary">
            <i class="fas fa-trash-alt me-2"></i> Voir les formations supprimées
        </a>
    </div>
</div>

<!-- Search and Filter Card -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body p-4">
        <div class="row g-3">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text bg-light border-0">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    <input type="text" id="searchInput" class="form-control border-0 bg-light" placeholder="Rechercher une formation...">
                </div>
            </div>
            <div class="col-md-3">
                <select class="form-select border-0 bg-light" id="filterQuiz">
                    <option value="">Tous les quiz</option>
                    <option value="with">Avec quiz</option>
                    <option value="without">Sans quiz</option>
                </select>
            </div>
            <div class="col-md-3">
                <select class="form-select border-0 bg-light" id="sortOrder">
                    <option value="newest">Plus récentes d'abord</option>
                    <option value="oldest">Plus anciennes d'abord</option>
                    <option value="az">A-Z</option>
                    <option value="za">Z-A</option>
                </select>
            </div>
        </div>
    </div>
</div>

<!-- Formations List Card -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-transparent border-0 pt-4 pb-2">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-0 fw-bold">Liste des Formations</h5>
                <p class="text-muted mb-0">{{ formations|length }} formation(s) trouvée(s)</p>
            </div>
            <div class="dropdown">
                <button class="btn btn-sm btn-light" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-ellipsis-v"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                    <li><a class="dropdown-item" href="#"><i class="fas fa-download me-2"></i>Exporter</a></li>
                    <li><a class="dropdown-item" href="#"><i class="fas fa-print me-2"></i>Imprimer</a></li>
                    <li><a class="dropdown-item" href="#" onclick="showNotification('Liste actualisée', 'info')"><i class="fas fa-sync-alt me-2"></i>Actualiser</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover datatable mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="border-0 ps-4">ID</th>
                        <th class="border-0">Titre</th>
                        <th class="border-0">Description</th>
                        <th class="border-0">Date de création</th>
                        <th class="border-0">Quiz</th>
                        <th class="border-0 text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for formation in formations %}
                        <tr>
                            <td class="ps-4">{{ formation.id }}</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                        <i class="fas fa-graduation-cap text-primary"></i>
                                    </div>
                                    <span class="fw-medium">{{ formation.titre }}</span>
                                </div>
                            </td>
                            <td>
                                <span class="text-muted">{{ formation.description|length > 50 ? formation.description|slice(0, 50) ~ '...' : formation.description }}</span>
                            </td>
                            <td>{{ formation.dateCreation ? formation.dateCreation|date('d/m/Y H:i') : '' }}</td>
                            <td>
                                {% if formation.quiz %}
                                    <span class="badge bg-info bg-opacity-10 text-info px-3 py-2 rounded-pill">
                                        <i class="fas fa-check-circle me-1"></i> {{ formation.quiz.title }}
                                    </span>
                                {% else %}
                                    <span class="badge bg-light text-secondary px-3 py-2 rounded-pill">
                                        <i class="fas fa-times-circle me-1"></i> Aucun
                                    </span>
                                {% endif %}
                            </td>
                            <td class="text-end pe-4">
                                <a href="{{ path('app_formation_show', {'id': formation.id}) }}" class="btn btn-sm btn-outline-info me-1" data-toggle="tooltip" title="Voir détails">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_formation_edit', {'id': formation.id}) }}" class="btn btn-sm btn-outline-warning me-1" data-toggle="tooltip" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                                {% if formation.filePath %}
                                    <a href="{{ asset(formation.filePath) }}" target="_blank" class="btn btn-sm btn-outline-primary me-1" data-toggle="tooltip" title="Voir PDF">
                                        <i class="fas fa-file-pdf"></i>
                                    </a>
                                {% endif %}
                                <form method="post" action="{{ path('app_formation_delete', {'id': formation.id}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette formation?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ formation.id) }}">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Supprimer">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <div class="d-flex flex-column align-items-center">
                                    <i class="fas fa-folder-open text-muted mb-3" style="font-size: 3rem;"></i>
                                    <h5 class="mb-2">Aucune formation trouvée</h5>
                                    <p class="text-muted mb-3">Commencez par ajouter une nouvelle formation</p>
                                    <a href="{{ path('app_formation_new') }}" class="btn btn-sm btn-primary">
                                        <i class="fas fa-plus me-2"></i> Ajouter une Formation
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    // Initialize search functionality
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const filterQuiz = document.getElementById('filterQuiz');
        const sortOrder = document.getElementById('sortOrder');
        const table = document.querySelector('.datatable');

        if (searchInput && table) {
            searchInput.addEventListener('keyup', function() {
                const searchText = this.value.toLowerCase();
                const rows = table.querySelectorAll('tbody tr');

                rows.forEach(row => {
                    const title = row.querySelector('td:nth-child(2)').textContent.toLowerCase();
                    const description = row.querySelector('td:nth-child(3)').textContent.toLowerCase();

                    if (title.includes(searchText) || description.includes(searchText)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        }

        // Filter by quiz
        if (filterQuiz && table) {
            filterQuiz.addEventListener('change', function() {
                const filterValue = this.value;
                const rows = table.querySelectorAll('tbody tr');

                rows.forEach(row => {
                    const quizCell = row.querySelector('td:nth-child(5)');
                    const hasQuiz = !quizCell.textContent.includes('Aucun');

                    if (filterValue === '' ||
                        (filterValue === 'with' && hasQuiz) ||
                        (filterValue === 'without' && !hasQuiz)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        }
    });
</script>

{% include 'back/includes/custom_scripts.html.twig' %}
{% endblock %}
