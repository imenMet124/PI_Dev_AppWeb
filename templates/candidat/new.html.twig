{% extends 'Front_Base.html.twig' %}

{% block title %}Créer un profil candidat{% endblock %}

{% block body %}
<div class="container py-5 mt-4">
  <div class="text-center mb-4">
    <h2 class="text-primary">Inscription Candidat</h2>
    <p class="text-muted">Complétez ce formulaire pour créer votre profil</p>
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm border-0 p-4">
        {{ include('candidat/_form.html.twig') }}

        <div class="mt-4 text-end">
          <a href="{{ path('app_candidat_index') }}" class="btn btn-outline-secondary">
            ← Retour à la liste
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
