{% extends 'Back_Base.html.twig' %}

{% block title %}Department Details{% endblock %}

{% block body %}
<div class="content" style="margin-left:260px;">
    <div class="container-fluid py-4">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Main Department Card -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-gradient-primary text-white py-3 d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="card-title mb-0">
                                <i class="fas fa-building me-2"></i>Department Details
                            </h4>
                            <small class="text-white-50">ID: {{ department.id }}</small>
                        </div>
                        <div class="btn-group">
                            <a href="{{ path('app_department_index') }}" class="btn btn-light btn-sm">
                                <i class="fas fa-arrow-left me-1"></i> Back
                            </a>
                            <a href="{{ path('app_department_edit', {'id': department.id}) }}" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit me-1"></i> Edit
                            </a>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="info-group mb-4">
                                    <label class="text-muted small text-uppercase">Department Name</label>
                                    <h5 class="mb-0">{{ department.name }}</h5>
                                </div>
                                <div class="info-group mb-4">
                                    <label class="text-muted small text-uppercase">Location</label>
                                    <h5 class="mb-0">
                                        <i class="fas fa-map-marker-alt text-danger me-2"></i>
                                        {{ department.location }}
                                    </h5>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-group mb-4">
                                    <label class="text-muted small text-uppercase">Manager</label>
                                    <h5 class="mb-0">
                                        <i class="fas fa-user-tie text-info me-2"></i>
                                        {% if department.manager %}
                                            {{ department.manager.name }}
                                        {% else %}
                                            <span class="text-muted">No manager assigned</span>
                                        {% endif %}
                                    </h5>
                                </div>
                            </div>
                        </div>
                        <div class="info-group">
                            <label class="text-muted small text-uppercase">Description</label>
                            <p class="mb-0 p-3 bg-light rounded">{{ department.description }}</p>
                        </div>
                    </div>
                </div>

                <!-- Danger Zone Card -->
                <div class="card border border-danger shadow-sm">
                    <div class="card-header bg-danger bg-opacity-10 border-danger">
                        <h4 class="card-title text-danger mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i>Danger Zone
                        </h4>
                    </div>
                    <div class="card-body">
                        {{ include('department/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.bg-gradient-primary {
    background: linear-gradient(45deg, #4e73df 0%, #224abe 100%);
}

.info-group label {
    font-size: 0.75rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.card {
    transition: all 0.3s ease;
}

.card:hover {
    transform: translateY(-2px);
}

.btn-group .btn {
    border-radius: 5px;
    margin-left: 0.5rem;
}

.bg-danger.bg-opacity-10 {
    background-color: rgba(220, 53, 69, 0.1) !important;
}
</style>
{% endblock %}