{% extends 'Back_Base.html.twig' %}

{% block title %}Departments{% endblock %}

{% block body %}
<div class="content" style="margin-left:260px;">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4 class="card-title mb-0">Departments</h4>
                        <a href="{{ path('app_department_new') }}" class="btn btn-primary">
                            <i class="fa fa-plus"></i> Add Department
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover align-middle">
                                <thead class="thead-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Location</th>
                                        <th>Manager</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for department in departments %}
                                    <tr>
                                        <td>{{ department.id }}</td>
                                        <td>{{ department.name }}</td>
                                        <td>{{ department.description }}</td>
                                        <td>{{ department.location }}</td>
                                        <td>
                                            {% if department.manager %}
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm me-2">
                                                        <span class="avatar-title rounded-circle bg-primary text-white">
                                                            {{ department.manager.name|first|upper }}
                                                        </span>
                                                    </div>
                                                    {{ department.manager.name }}
                                                </div>
                                            {% else %}
                                                <span class="text-muted">No manager</span>
                                            {% endif %}
                                        </td>
                                        <td class="text-center">
                                            <a href="{{ path('app_department_show', {'id': department.id}) }}" class="btn btn-info btn-sm mx-1" title="View">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_department_edit', {'id': department.id}) }}" class="btn btn-primary btn-sm mx-1" title="Edit">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center">No departments found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
{% endblock %}