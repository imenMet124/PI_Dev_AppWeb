{% extends 'base.html.twig' %}

{% block title %}Edit Project{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h1 class="h3 mb-0"><i class="fas fa-edit me-2"></i>Edit Project</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_label(form.nom_projet, 'Project Name', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.nom_projet, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.nom_projet) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.desc_projet, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.desc_projet, {'attr': {'class': 'form-control', 'rows': '4'}}) }}
                                {{ form_errors(form.desc_projet) }}
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.date_debut_projet, 'Start Date', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.date_debut_projet, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.date_debut_projet) }}
                                </div>

                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.date_fin_projet, 'End Date', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.date_fin_projet, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.date_fin_projet) }}
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.statut_projet, 'Status', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.statut_projet, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.statut_projet) }}
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_project_index') }}" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back to list
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Update Project
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 