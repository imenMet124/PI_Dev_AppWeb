{% extends 'Back_Base.html.twig' %}

{% block title %}Project Details{% endblock %}

{% block body %}
<div class="wrapper">
    <div class="main-panel">
        <div class="content">
            <div class="page-inner">
                <div class="page-header d-flex align-items-center justify-content-between mb-4">
                    <div>
                        <h4 class="page-title fw-bold">Project Details</h4>
                        <p class="text-muted">View complete project information</p>
                    </div>
                    <div>
                        <a href="{{ path('app_project_index') }}" class="btn btn-outline-primary btn-rounded shadow-sm">
                            <i class="fas fa-arrow-left me-2"></i>Back to Project List
                        </a>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8">
                        <div class="card border-0 shadow-sm" style="border-radius: 15px;">
                            <div class="card-header bg-white border-0 pt-4 pb-0">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="card-title fw-bold mb-0">{{ projet.nomProjet|u.title }}</h5>
                                    <span class="badge bg-{{ projet.statutProjet == 'Completed' ? 'success' : (projet.statutProjet == 'In Progress' ? 'primary' : 'secondary') }} px-3 py-2">
                                        {{ projet.statutProjet ?? 'Not Started' }}
                                    </span>
                                </div>
                            </div>
                            
                            <div class="card-body p-4">
                                <div class="mb-4 pb-3 border-bottom">
                                    <h6 class="text-primary mb-2"><i class="fas fa-align-left me-2"></i>Description</h6>
                                    <p class="mb-0">{{ projet.descProjet|striptags|u.truncate(200, '...') ?: 'No description provided.' }}</p>
                                </div>

                                <div class="row mb-4 pb-3 border-bottom">
                                    <div class="col-md-6 mb-3">
                                        <h6 class="text-primary mb-2"><i class="fas fa-calendar me-2"></i>Start Date</h6>
                                        <p class="mb-0 d-flex align-items-center">
                                            {% if projet.dateDebutProjet %}
                                                <span class="badge bg-light text-dark me-2 px-3 py-2" style="border-radius: 6px;">
                                                    {{ projet.dateDebutProjet|date('d') }}
                                                </span>
                                                {{ projet.dateDebutProjet|date('M Y') }}
                                            {% else %}
                                                Not set
                                            {% endif %}
                                        </p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <h6 class="text-primary mb-2"><i class="fas fa-calendar-check me-2"></i>End Date</h6>
                                        <p class="mb-0 d-flex align-items-center">
                                            {% if projet.dateFinProjet %}
                                                <span class="badge bg-light text-dark me-2 px-3 py-2" style="border-radius: 6px;">
                                                    {{ projet.dateFinProjet|date('d') }}
                                                </span>
                                                {{ projet.dateFinProjet|date('M Y') }}
                                            {% else %}
                                                Not set
                                            {% endif %}
                                        </p>
                                    </div>
                                </div>
                                
                                {% if projet.taches|length > 0 %}
                                <div class="mb-4">
                                    <h6 class="text-primary mb-3"><i class="fas fa-tasks me-2"></i>Related Tasks ({{ projet.taches|length }})</h6>
                                    <ul class="list-group list-group-flush">
                                        {% for tache in projet.taches %}
                                            <li class="list-group-item px-0 d-flex justify-content-between align-items-center">
                                                <div>
                                                    <span class="fw-medium">{{ tache.titreTache }}</span>
                                                    <span class="badge bg-{{ tache.statutTache == 'Completed' ? 'success' : (tache.statutTache == 'In Progress' ? 'primary' : 'secondary') }} ms-2">
                                                        {{ tache.statutTache ?? 'Not Started' }}
                                                    </span>
                                                </div>
                                                <a href="{{ path('app_task_show', {'id_tache': tache.idTache}) }}" class="btn btn-sm btn-link">
                                                    <i class="fas fa-chevron-right"></i>
                                                </a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                                {% endif %}

                                <div class="d-flex justify-content-between align-items-center mt-4 pt-2">
                                    <a href="{{ path('app_project_edit', {'id_projet': projet.idProjet}) }}" class="btn btn-primary">
                                        <i class="fas fa-edit me-2"></i>Edit
                                    </a>
                                    
                                    <form method="post" action="{{ path('app_project_delete', {'id_projet': projet.idProjet}) }}" onsubmit="return confirm('Are you sure you want to delete this project?');" style="display: inline-block;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ projet.idProjet) }}">
                                        <button class="btn btn-danger">
                                            <i class="fas fa-trash-alt me-2"></i>Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm mb-4" style="border-radius: 15px;">
                            <div class="card-body p-4">
                                <h6 class="text-primary mb-3"><i class="fas fa-chart-pie me-2"></i>Project Stats</h6>
                                
                                <div class="mb-4">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="text-muted">Task Completion</span>
                                        {% set completedTasks = projet.taches|filter(t => t.statutTache == 'Completed')|length %}
                                        {% set totalTasks = projet.taches|length %}
                                        {% set completionPercentage = totalTasks > 0 ? (completedTasks / totalTasks) * 100 : 0 %}
                                        <span class="fw-bold">{{ completionPercentage|round }}%</span>
                                    </div>
                                    <div class="progress" style="height: 8px; border-radius: 4px;">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: {{ completionPercentage }}%"></div>
                                    </div>
                                </div>
                                
                                <div class="d-flex align-items-center mb-3">
                                    <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                        <i class="fas fa-calendar-day text-primary"></i>
                                    </div>
                                    <div>
                                        <div class="text-muted small">Duration</div>
                                        <div class="fw-bold">
                                            {% if projet.dateDebutProjet and projet.dateFinProjet %}
                                                {% set days = date(projet.dateFinProjet).diff(date(projet.dateDebutProjet)).days %}
                                                {{ days }} days
                                            {% else %}
                                                Not defined
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                        <i class="fas fa-tasks text-primary"></i>
                                    </div>
                                    <div>
                                        <div class="text-muted small">Tasks</div>
                                        <div class="fw-bold">{{ projet.taches|length }} total</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}