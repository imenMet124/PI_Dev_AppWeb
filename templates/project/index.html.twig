{% extends 'Back_Base.html.twig' %}

{% block title %}Projects{% endblock %}

{% block body %}
<div class="wrapper">
    <div class="main-panel">
        <div class="content">
            <div class="page-inner">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h4 class="page-title fw-bold">Projects</h4>
                        <p class="text-muted">Manage all your organization's projects</p>
                    </div>
                    <div>
                        <a href="{{ path('app_project_new') }}" class="btn btn-primary btn-rounded shadow-sm">
                            <i class="fas fa-plus me-2"></i>New Project
                        </a>
                    </div>
                </div>

                <div class="row">
                    {% for projet in projets %}
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-sm h-100 border-0 hover-shadow" style="border-radius: 12px; transition: all 0.3s ease;">
                                <div class="card-body">
                                    <div class="mb-3">
                                        <span class="badge bg-{{ projet.statutProjet == 'Completed' ? 'success' : (projet.statutProjet == 'In Progress' ? 'primary' : 'secondary') }} px-3 py-2 float-end">
                                            {{ projet.statutProjet ?? 'Not Started' }}
                                        </span>
                                        <h5 class="card-title fw-bold" style="margin-right: 70px;">{{ projet.nomProjet }}</h5>
                                    </div>
                                    
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                            <i class="fas fa-calendar-alt text-primary"></i>
                                        </div>
                                        <div>
                                            <small class="text-muted">
                                                {{ projet.dateDebutProjet ? projet.dateDebutProjet|date('M d, Y') : 'No start date' }} - 
                                                {{ projet.dateFinProjet ? projet.dateFinProjet|date('M d, Y') : 'No end date' }}
                                            </small>
                                        </div>
                                    </div>
                                    
                                    <p class="card-text text-muted mb-4" style="height: 60px; overflow: hidden;">{{ projet.descProjet|slice(0, 100) }}{% if projet.descProjet|length > 100 %}...{% endif %}</p>
                                    
                                    <div class="d-flex justify-content-between mt-auto align-items-center">
                                        <a href="{{ path('app_project_edit', {'id_projet': projet.idProjet}) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit me-1"></i> Edit
                                        </a>
                                        
                                        <a href="{{ path('app_project_show', {'id_projet': projet.idProjet}) }}" class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-info-circle me-1"></i> Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="col-12">
                            <div class="alert alert-info border-0 shadow-sm d-flex align-items-center">
                                <i class="fas fa-info-circle me-3 fa-lg text-info"></i>
                                <div>No projects found. Create a new project to get started.</div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>

{% block stylesheets %}
<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
</style>
{% endblock %}
{% endblock %}