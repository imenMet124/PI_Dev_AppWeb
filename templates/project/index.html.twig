{% extends 'base.html.twig' %}

{% block title %}Projects{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-project-diagram me-2"></i>Projects</h1>
        <a href="{{ path('app_project_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>New Project
        </a>
    </div>

    <div class="row">
        {% for projet in projets %}
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">{{ projet.nomProjet }}</h5>
                        <p class="card-text text-muted">
                            <small>
                                <i class="fas fa-calendar me-1"></i>
                                {{ projet.dateDebutProjet ? projet.dateDebutProjet|date('Y-m-d') : 'No start date' }} -
                                {{ projet.dateFinProjet ? projet.dateFinProjet|date('Y-m-d') : 'No end date' }}
                            </small>
                        </p>
                        <p class="card-text">{{ projet.descProjet|slice(0, 100) }}...</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-{{ projet.statutProjet == 'Completed' ? 'success' : 'primary' }}">
                                {{ projet.statutProjet ?? 'Not Started' }}
                            </span>
                            <div class="btn-group">
                                <a href="{{ path('app_project_show', {'id_projet': projet.idProjet}) }}" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_project_edit', {'id_projet': projet.idProjet}) }}" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>No projects found.
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %} 