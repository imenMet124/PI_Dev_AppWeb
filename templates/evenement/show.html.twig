<!DOCTYPE html>

<title>Evenement</title>

{% block body %}
    <h1>Evenement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evenement.id }}</td>
            </tr>
            <tr>
                <th>Nom_Evenement</th>
                <td>{{ evenement.NomEvenement }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ evenement.Description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ evenement.Date ? evenement.Date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ evenement.Heure ? evenement.Heure|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Capacite</th>
                <td>{{ evenement.Capacite }}</td>
            </tr>
            <tr>
                <th>Nombre_Participants</th>
                <td>{{ evenement.NombreParticipants }}</td>
            </tr>
            <tr>
                <th>Image_Path</th>
                <td>{{ evenement.ImagePath }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_evenement') }}">back to list</a>

    <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}">edit</a>

    {{ include('evenement/_delete_form.html.twig') }}
