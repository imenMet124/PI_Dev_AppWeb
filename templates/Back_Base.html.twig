<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <title>EasyHR</title>
    <meta content="width=device-width, initial-scale=1.0, shrink-to-fit=no" name="viewport"/>
    <link rel="icon" href="{{ asset('assets/img/kaiadmin/logo_icone.ico') }}" type="image/x-icon"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Fonts and icons -->
    <script src="{{ asset('assets/js/plugin/webfont/webfont.min.js') }}"></script>
    <script>
        WebFont.load({
            google: {
                families: ["Public Sans:300,400,500,600,700"]
            },
            custom: {
                families: [
                    "Font Awesome 5 Solid", "Font Awesome 5 Regular",
                    "Font Awesome 5 Brands", "simple-line-icons"
                ],
                urls: ["{{ asset('assets/css/fonts.min.css') }}"]
            },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>
    <!-- CSS Files -->
    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('assets/css/plugins.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('assets/css/kaiadmin.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('assets/css/demo.css') }}"/>
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/main.min.css" rel="stylesheet" />
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar" data-background-color="dark">
        <div class="sidebar-logo">
            <!-- Logo Header -->
            <div class="logo-header" data-background-color="dark">
                <a href="{{ path('app_back') }}" class="logo">
                    <img src="{{ asset('assets/img/kaiadmin/logos.svg') }}" alt="navbar brand" class="navbar-brand" height="80"/>
                </a>
                <div class="nav-toggle">
                    <button class="btn btn-toggle toggle-sidebar">
                        <i class="gg-menu-right"></i>
                    </button>
                    <button class="btn btn-toggle sidenav-toggler">
                        <i class="gg-menu-left"></i>
                    </button>
                </div>
                <button class="topbar-toggler more">
                    <i class="gg-more-vertical-alt"></i>
                </button>
            </div>
            <!-- End Logo Header -->
        </div>
        <div class="sidebar-wrapper scrollbar scrollbar-inner">
            <div class="sidebar-content">
                <ul class="nav nav-secondary">
                    <li class="nav-item {% if app.request.get('_route') == 'app_back' %}active{% endif %}">
                        <a href="{{ path('app_back') }}">
                            <i class="fas fa-home"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li class="nav-section">
                        <span class="sidebar-mini-icon">
                            <i class="fa fa-ellipsis-h"></i>
                        </span>
                        <h4 class="text-section">Task Management</h4>
                    </li>
                    <li class="nav-item {% if app.request.get('_route') starts with 'app_task_' and app.request.get('_route') != 'app_task_index' %}active{% endif %}">
                        <a data-bs-toggle="collapse" data-bs-target="#taskManagement" role="button" aria-expanded="false" aria-controls="taskManagement" class="{% if app.request.get('_route') starts with 'app_task_' and app.request.get('_route') != 'app_task_index' %}collapsed{% endif %}">
                            <i class="fas fa-tasks"></i>
                            <p>Tasks</p>
                            <span class="caret"></span>
                        </a>
                        <div class="collapse {% if app.request.get('_route') starts with 'app_task_' and app.request.get('_route') != 'app_task_index' %}show{% endif %}" id="taskManagement">
                            <ul class="nav nav-collapse">
                                <li class="{% if app.request.get('_route') == 'app_task_new' %}active{% endif %}">
                                    <a href="{{ path('app_task_new') }}">
                                        <span class="sub-item">Create Task</span>
                                    </a>
                                </li>
                                <li class="{% if app.request.get('_route') == 'app_task_index' %}active{% endif %}">
                                    <a href="{{ path('app_task_index') }}">
                                        <span class="sub-item">All Tasks</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-section">
                        <span class="sidebar-mini-icon">
                            <i class="fa fa-ellipsis-h"></i>
                        </span>
                        <h4 class="text-section">Projects</h4>
                    </li>
                    <li class="nav-item {% if app.request.get('_route') starts with 'app_project_' %}active{% endif %}">
                        <a data-bs-toggle="collapse" href="#projectManagement" role="button" aria-expanded="{% if app.request.get('_route') starts with 'app_project_' %}true{% else %}false{% endif %}" aria-controls="projectManagement" class="{% if app.request.get('_route') starts with 'app_project_' %}collapsed{% endif %}">
                            <i class="fas fa-project-diagram"></i>
                            <p>Projects</p>
                            <span class="caret"></span>
                        </a>
                        <div class="collapse {% if app.request.get('_route') starts with 'app_project_' %}show{% endif %}" id="projectManagement">
                            <ul class="nav nav-collapse">
                                <li class="{% if app.request.get('_route') == 'app_project_index' %}active{% endif %}">
                                    <a href="{{ path('app_project_index') }}">
                                        <span class="sub-item">All Projects</span>
                                    </a>
                                </li>
                                <li class="{% if app.request.get('_route') == 'app_project_new' %}active{% endif %}">
                                    <a href="{{ path('app_project_new') }}">
                                        <span class="sub-item">Create Project</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-section">
                        <span class="sidebar-mini-icon">
                            <i class="fa fa-ellipsis-h"></i>
                        </span>
                        <h4 class="text-section">Assignments</h4>
                    </li>
                    <li class="nav-item {% if app.request.get('_route') starts with 'app_assignment_' %}active{% endif %}">
                        <a data-bs-toggle="collapse" data-bs-target="#assignmentManagement" role="button" aria-expanded="false" aria-controls="assignmentManagement" class="{% if app.request.get('_route') starts with 'app_assignment_' %}collapsed{% endif %}">
                            <i class="fas fa-user-check"></i>
                            <p>Assignments</p>
                            <span class="caret"></span>
                        </a>
                        <div class="collapse {% if app.request.get('_route') starts with 'app_assignment_' %}show{% endif %}" id="assignmentManagement">
                            <ul class="nav nav-collapse">
                                <li class="{% if app.request.get('_route') == 'app_assignment_index' %}active{% endif %}">
                                    <a href="{{ path('app_assignment_index') }}">
                                        <span class="sub-item">All Assignments</span>
                                    </a>
                                </li>
                                <li class="{% if app.request.get('_route') == 'app_assignment_new' %}active{% endif %}">
                                    <a href="{{ path('app_assignment_new') }}">
                                        <span class="sub-item">Create Assignment</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-section">
                        <span class="sidebar-mini-icon">
                            <i class="fa fa-ellipsis-h"></i>
                        </span>
                        <h4 class="text-section">Users & Departments</h4>
                    </li>
                    <li class="nav-item {% if app.request.get('_route') starts with 'app_user_' %}active{% endif %}">
                        <a href="{{ path('app_user_index') }}">
                            <i class="fas fa-users"></i>
                            <p>Users</p>
                        </a>
                    </li>
                    <li class="nav-item {% if app.request.get('_route') starts with 'app_department_' %}active{% endif %}">
                        <a href="{{ path('app_department_index') }}">
                            <i class="fas fa-building"></i>
                            <p>Departments</p>
                        </a>
                    </li>
                    <li class="nav-section">
                        <span class="sidebar-mini-icon">
                            <i class="fa fa-ellipsis-h"></i>
                        </span>
                        <h4 class="text-section">Settings</h4>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('app_profile_show') }}">
                            <i class="fas fa-user"></i>
                            <p>Profile</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" onclick="return false;">
                            <i class="fas fa-th-list"></i>
                            <p>Evenements</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- End Sidebar -->
    {% block body %}{% endblock %}
    <!--   Core JS Files   -->
    <script src="{{ asset('assets/js/core/jquery-3.7.1.min.js') }}"></script>
    <script src="{{ asset('assets/js/core/popper.min.js') }}"></script>
    <script src="{{ asset('assets/js/core/bootstrap.min.js') }}"></script>
    <!-- jQuery Scrollbar -->
    <script src="{{ asset('assets/js/plugin/jquery-scrollbar/jquery.scrollbar.min.js') }}"></script>
    <!-- Chart JS -->
    <script src="{{ asset('assets/js/plugin/chart.js/chart.min.js') }}"></script>
    <!-- jQuery Sparkline -->
    <script src="{{ asset('assets/js/plugin/jquery.sparkline/jquery.sparkline.min.js') }}"></script>
    <!-- Chart Circle -->
    <script src="{{ asset('assets/js/plugin/chart-circle/circles.min.js') }}"></script>
    <!-- Datatables -->
    <script src="{{ asset('assets/js/plugin/datatables/datatables.min.js') }}"></script>
    <!-- Bootstrap Notify -->
    <script src="{{ asset('assets/js/plugin/bootstrap-notify/bootstrap-notify.min.js') }}"></script>
    <!-- jQuery Vector Maps -->
    <script src="{{ asset('assets/js/plugin/jsvectormap/jsvectormap.min.js') }}"></script>
    <script src="{{ asset('assets/js/plugin/jsvectormap/world.js') }}"></script>
    <!-- Sweet Alert -->
    <script src="{{ asset('assets/js/plugin/sweetalert/sweetalert.min.js') }}"></script>
    <!-- Kaiadmin JS -->
    <script src="{{ asset('assets/js/kaiadmin.min.js') }}"></script>
    <!-- DEMO SCRIPTS - à ne pas inclure en prod -->
    <script src="{{ asset('assets/js/setting-demo.js') }}"></script>
    <script src="{{ asset('assets/js/demo.js') }}"></script>
    <!-- JS FullCalendar + dépendances -->
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>
    {% block javascripts %}{% endblock %}
</body>

</html>
