{% extends 'Back_Base.html.twig' %}

{% block title %}Créer une nouvelle offre{% endblock %}

{% block body %}
<div class="main-panel">
  <div class="content">
    <div class="container">
      <div class="page-inner">
        <div class="page-header">
          <h3 class="fw-bold mb-3">Créer une nouvelle offre d'emploi</h3>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header">
                <div class="card-title">Formulaire d'offre</div>
              </div>

              <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                {% if form.vars.errors|length > 0 %}
                  <div class="alert alert-danger">
                    {{ form_errors(form) }}
                  </div>
                {% endif %}

                <div class="form-group mb-3">
                  <label>{{ form_label(form.title) }}</label>
                  {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                  {{ form_errors(form.title) }}
                </div>

                <div class="form-group mb-3">
                  <label>{{ form_label(form.description) }}</label>
                  {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '4'}}) }}
                  {{ form_errors(form.description) }}
                </div>

                <div class="form-group mb-3">
                  <label>{{ form_label(form.location) }}</label>
                  {{ form_widget(form.location, {'attr': {'class': 'form-control'}}) }}
                  {{ form_errors(form.location) }}
                </div>

                <div class="form-group mb-3">
                  <label>{{ form_label(form.department) }}</label>
                  {{ form_widget(form.department, {'attr': {'class': 'form-control'}}) }}
                  {{ form_errors(form.department) }}
                </div>

                <div class="form-group mb-3">
                  <label>{{ form_label(form.contractType) }}</label>
                  {{ form_widget(form.contractType, {'attr': {'class': 'form-select'}}) }}
                  <small class="form-text text-muted">Ex : CDI, CDD, stage, alternance…</small>
                  {{ form_errors(form.contractType) }}
                </div>

                <div class="form-group mb-3">
                  <label>{{ form_label(form.salaryMin) }}</label>
                  {{ form_widget(form.salaryMin, {'attr': {'class': 'form-control'}}) }}
                  {{ form_errors(form.salaryMin) }}
                </div>

                <div class="form-group mb-3">
                  <label>{{ form_label(form.salaryMax) }}</label>
                  {{ form_widget(form.salaryMax, {'attr': {'class': 'form-control'}}) }}
                  {{ form_errors(form.salaryMax) }}
                </div>

                <div class="form-check form-switch mb-3">
                  {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input'}}) }}
                  <label class="form-check-label">{{ form_label(form.isActive) }}</label>
                  {{ form_errors(form.isActive) }}
                </div>

                <div class="card-action mt-4 d-flex justify-content-between">
                  <button class="btn btn-success">Enregistrer</button>
                  <a href="{{ path('app_job_offer_index') }}" class="btn btn-danger">Annuler</a>
                </div>

                {{ form_end(form) }}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
