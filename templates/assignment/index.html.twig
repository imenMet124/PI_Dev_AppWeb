{% extends 'Back_Base.html.twig' %}

{% block title %}Assignments{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-tasks me-2"></i>Assignments</h1>
        <a href="{{ path('app_assignment_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>New Assignment
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Task</th>
                    <th>Employee</th>
                    <th>Assignment Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for affectation in affectations %}
                    <tr>
                        <td>{{ affectation.tache.titreTache }}</td>
                        <td>{{ affectation.employe.iyedNomUser }}</td>
                        <td>{{ affectation.dateAffectation ? affectation.dateAffectation|date('Y-m-d') : '' }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('app_assignment_show', {'id_affectation': affectation.idAffectation}) }}" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_assignment_edit', {'id_affectation': affectation.idAffectation}) }}" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>No assignments found.
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %} 