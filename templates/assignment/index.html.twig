{% extends 'Back_Base.html.twig' %}

{% block title %}Assignments{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4" style="margin-left: 280px;">
        <h1><i class="fas fa-tasks me-2"></i>Assignments</h1>
        <a href="{{ path('app_assignment_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>New Assignment
        </a>
    </div>

    <div class="table-responsive" style="margin-left: 280px;">
        <table class="table table-striped table-hover align-middle shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>Task</th>
                    <th>Employee</th>
                    <th>Assignment Date</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for affectation in affectations %}
                    <tr class="table-row-effect">
                        <td><span class="fw-semibold">{{ affectation.tache.titreTache }}</span></td>
                        <td><span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill">{{ affectation.employe.name }}</span></td>
                        <td><span class="text-muted">{{ affectation.dateAffectation ? affectation.dateAffectation|date('Y-m-d') : '' }}</span></td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a href="{{ path('app_assignment_show', {'id_affectation': affectation.idAffectation}) }}" class="btn btn-sm btn-outline-primary" title="View">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_assignment_edit', {'id_affectation': affectation.idAffectation}) }}" class="btn btn-sm btn-outline-warning" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">
                            <div class="alert alert-info mb-0">
                                <i class="fas fa-info-circle me-2"></i>No assignments found.
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

<style>
.table-row-effect:hover {
    background-color: #f6f9fc;
    transition: background 0.2s;
}
.badge.bg-primary.bg-opacity-10 {
    background-color: rgba(13,110,253,0.1)!important;
    color: #0d6efd!important;
    font-weight: 500;
}
</style>
{% endblock %}