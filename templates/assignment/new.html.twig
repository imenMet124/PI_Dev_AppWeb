{% extends 'Back_Base.html.twig' %}

{% block title %}New Assignment{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-9" style="margin-left: 280px;">
                <div class="card shadow-lg border-0" style="border-radius: 18px;">
                    <div class="card-header bg-primary text-white" style="border-radius: 18px 18px 0 0;">
                        <h1 class="h3 mb-0"><i class="fas fa-plus me-2"></i>Create New Assignment</h1>
                    </div>
                    <div class="card-body bg-light">
                        {{ form_start(form) }}
                            <div class="mb-4">
                                {{ form_label(form.tache, 'Task', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.tache, {'attr': {'class': 'form-control shadow-sm'}}) }}
                                {{ form_errors(form.tache) }}
                            </div>

                            <div class="mb-4">
                                {{ form_label(form.employe, 'Employee', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.employe, {'attr': {'class': 'form-control shadow-sm'}}) }}
                                {{ form_errors(form.employe) }}
                            </div>

                            <div class="mb-4">
                                {{ form_label(form.date_affectation, 'Assignment Date', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.date_affectation, {'attr': {'class': 'form-control shadow-sm'}}) }}
                                {{ form_errors(form.date_affectation) }}
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_assignment_index') }}" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back to list
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Create Assignment
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}